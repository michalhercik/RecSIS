package utils

templ Page(title string) {
    <!DOCTYPE html>
    <html>
        <head>
            <title>{ title }</title>
            <link rel="stylesheet" type="text/css" href="style.css">
            <script src="https://unpkg.com/htmx.org@2.0.3" integrity="sha384-0895/pl2MU10Hqc6jd4RvrthNlDiE9U1tWmX7WRESftEDRosgxNsQG/Ze9YMRzHq" crossorigin="anonymous"></script>
        </head>
        <body>
            @Nav()
            <main>
                { children... }
            </main>
            @Footer()
        </body>
    </html>
}

templ navItem(url string, text string) {
    <li><a hx-get={ url } hx-target="main" hx-push-url="true">{ text }</a></li>
}

templ Nav() {
    <nav id="page-nav">
        <ul>
            <li><a>RecSIS</a></li>
            @navItem("/", "Home")
            @navItem("/courses", "Courses")
            <li><a>Blueprint</a></li>
            <li><a>Login</a></li>
            <li><a>English</a></li>
        </ul>
    </nav>
}

templ Footer() {
    <footer>
        In case of any issues, please contact the RecSIS team.
        <a href="mailto:recsis@gmail.com">recsis@gmail.com</a>
    </footer>
}